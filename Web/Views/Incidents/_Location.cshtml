    <div class="row">
        <div class="col-md-12">
            <div class="mb-3">
                <label class="form-label" >Address <span class="text-danger">*</span></label>
                <textarea type="text" class="form-control" id="companyName" placeholder="Street, city, state..."></textarea>
                <div class="invalid-feedback"></div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="mb-3">
                <input type="checkbox" id="option1" class="form-check-input">
                <label class="form-check-label" for="option1">Same as Caller Address</label>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6">
            <div class="mb-3">
                <label class="form-label" asp-for="incidentiLocation.Landmark">Intersection / Landmark<span class="text-danger">*</span></label>
                <input type="text" class="form-control" id="landmark" required asp-for="incidentiLocation.Landmark" />
                <div class="invalid-feedback"></div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="mb-3">
                <label class="form-label" asp-for="incidentiLocation.ServiceAccount">Service Account # </label>
                <input type="text" class="form-control" id="serviceAct" asp-for="incidentiLocation.ServiceAccount" />
                
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="checkBoxTitle">Asset Type</div>
            <div class="row">

                @foreach (var asset in Model.incidentiLocation.AssetsIncidentList)
                {
                    var id = "asset_" + asset.Value;
                    var checkedAttr = Model.incidentiLocation.AssetIDs != null ? (Model.incidentiLocation.AssetIDs.Contains(asset.Value) ? "checked" : "") : "";
                    <div class="col-md-6">
                        <div class="mb-3">
                            <input name="asset.Id" type="checkbox" class="form-check-input"
                                   data-val="true" data-val-required="The Asset field is required." @checkedAttr value="@asset.Value" id="@id">
                            <label class="form-check-label" for="@id">@asset.Text</label>
                        </div>
                    </div>
                }
            </div>

        </div>
    </div>
    <div class="d-flex justify-content-end gap-2 mt-3 addIncidentBtns">
        <button type="button" class="btn btnBack" id="backButton">Back</button>
        <button type="button" class="btn btn-primary" id="nextToIncidentDetials">Next</button>
    </div>
</div>